---
interface Props {
	title: string;
}

const { title } = Astro.props;

import Sidebar from "@components/blog/Sidebar.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-white dark:bg-gray-800 dark:text-white">
		<Sidebar />

		<slot />

		<footer
			class="p-3 text-center text-gray-700 bg-gray-200 dark:bg-gray-900 dark:text-white"
		>
			<div>
				<h1>
					&copy; All right reserved. Alba Blog. Powered by <a
						href="https://github.com/PonnyTheLight"
						target="_blank"
						class="text-blue-500 border-blue-500 hover:border-b"
						>PonnyTheLight</a
					>
				</h1>
			</div>
		</footer>
		<style is:global>
			@tailwind base;
			@tailwind components;
			@tailwind utilities;
		</style>
	</body>
</html>
